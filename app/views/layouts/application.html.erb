<!DOCTYPE html>
<html>
    <head>
        <title>SimpleForum</title>
        <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">SimpleForum</a>
                </div>
                <% if user_signed_in? %>
                    <div class="btn-group navbar-btn pull-right">
                        <%= link_to current_user.display_name, edit_user_registration_path, class: 'btn btn-default' %>
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><%= link_to "Signout", destroy_user_session_path, :method => :delete %>
                        </ul>
                    </div>
                <% else %>
                    <div class="btn-group pull-right navbar-btn">
                        <%= link_to "Signin", new_user_session_path, class: "btn btn-default" %>
                        <%= link_to "Register", new_user_registration_path, class: "btn btn-default" %>
                    </div>
                <% end %>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-12"><%= yield %></div>
            </div>
        </div>
    </body>
</html>
