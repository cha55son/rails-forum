<div class="page-header">
    <h1>Sign In</h1>
</div>
<% if flash[:alert] %>
    <div class="alert alert-warning"><%= flash[:alert] %></div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal', :role => 'form' }) do |f| %>
    <div class="form-group">
        <%= f.label :email, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.email_field :email, :class => "form-control", :placeholder => "Email", :autofocus => true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-lg-2 control-label"></label>
        <% if devise_mapping.rememberable? %>
            <div class="col-lg-10">
                <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'control-label' %>
            </div>
        <% end %>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">Sign In</button>
            <%= link_to "Cancel", :back, :class => "btn btn-default" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <%= render "devise/shared/links" %>
        </div>
    </div>
<% end %>

