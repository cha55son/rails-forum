<%
    # Required parameters
    # :topic => a_topic_record
    #

    user = topic.user
%>
<div class="panel panel-default topic-block">
    <div class="panel-heading">
        <%= link_to topic.title, [topic.category, topic] %> |
        <%= user.display_name %> <small><%= time_ago_in_words topic.created_at %> ago</small>
        <span class="subtle-text pull-right">Topic</span>
    </div>
    <div class="panel-body">
        <%= topic.body %>
        <% if topic.created_at != topic.updated_at %>
            <br />
            <strong>Edited <%= time_ago_in_words topic.updated_at %> ago</strong>
        <% end %>
    </div>
</div>
