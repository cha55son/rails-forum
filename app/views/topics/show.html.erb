<ol class="breadcrumb">
    <li><%= link_to "Categories", categories_path %>
    <li><%= link_to @cat.title, @cat %>
    <li class="active"><%= @topic.title %>
</ol>
<div class="page-header">
    <h1>Topic: <%= @topic.title %></h1>
</div>
<div style="margin-bottom: 20px">
    <%= link_to 'New Post', [:new, @cat, @topic, :post], :class => 'btn btn-default' %>
    <%= link_to 'Edit Topic', [:edit, @cat, @topic], :class => 'btn btn-default' %>
    <% if @is_admin %>
        <%= link_to "Delete Topic", [@cat, @topic], method: :delete, :data => { :confirm => "Are you sure?" }, :class => 'btn btn-danger pull-right' %>
    <% end %>
</div>
<%= render 'topic_body' %>
<table class="table">
    <% @posts.each do |post| 
        user = User.find(post.user_id) %>
        <tr>
            <td><%= user.display_name %></td>
            <td><%= post.body %></td>
        </tr>
    <% end %>
</table>
